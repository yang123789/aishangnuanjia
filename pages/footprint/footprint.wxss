/* pages/footprint/footprint.wxss */
page{
  background:white;
}
.l-container{padding:30rpx;}
.l-container .l-item{width:100%;margin-bottom: 80rpx;}
.l-container .l-item .l-time{font-size:40rpx;color: #000000;padding-bottom: 20rpx;border-bottom:1px solid #eee;}
.l-container .l-item .l-matter{position: relative;padding:30rpx 0rpx;padding-left:250rpx;border-bottom:1px solid #eee;}
.l-container .l-item .l-matter .left{width:200rpx;height:200rpx;position:absolute;top:30rpx;left:0;}
.l-container .l-item  .l-matter .left image{width:100%;height:100%;}
.l-container .l-item  .l-matter .right{min-height:200rpx;position: relative;}
.l-container .l-item  .l-matter .right  .title{
  font-size: 30rpx;
  color: #585858;
   word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding-top:20rpx;
  line-height: 44rpx;
}
.l-container .l-item  .l-matter .right  .price{
  position:absolute;
  bottom:10rpx;
  left:0;
  font-size: 30rpx;
  color: #FF6B29;
}
.nodata{text-align: center;margin-top:40%;}